{
  "comprehension directive": {
    "prefix": ["<for"],
    "body": [
      "<%= for ${1} <- ${2} do %>",
      "  ${0}",
      "<% end %>"
    ]
  },
  "typespec": {
    "prefix": "type",
    "body": "@type ${1:t} :: $0"
  },
  "doc template": {
    "prefix": ["doc"],
    "body": [
      "@doc \"\"\"",
      "${1:short summery of function behaviour}",
      "",
      "${2:optional long description with specifics (e.g. on attributes or behaviour)}",
      "",
      "${3:Describe specific case of folloing doctest",
      "",
      "## Examples",
      "",
      "  iex> Some.doctest(code)",
      "  [response]",
      "}",
      "\"\"\""
    ]
  },
  "config": {
    "prefix": ["config"],
    "body": [
      "import Config",
      "",
      "config ${1:name_atom_of_the_application}",
      "  ${2:some_key}: ${2: :some_value}",
      "",
      "config :logger,",
      "  level: :info",
      "",
      "import_config \"#{config_env()}.exs\""
    ]
  }
}

