{
    "LimitRange": {
    "prefix": ["k8sLimitRange", "kube.limit_range"],
    "description": "",
    "body": [
        "# LimitRange for Pod or Container",
        "apiVersion: v1",
        "kind: LimitRange",
        "metadata:",
        "  name: ${1:LimitRangeName}",
        "  namespace: ${2:default}",
        "spec:",
        "  limits:",
        "  # 'default' and 'defaultRequest' may not be specified when type is 'Pod'",
        "  - type: ${3|Container,Pod|}",
        "    default:",
        "      cpu: 100m",
        "      memory: 512Mi",
        "    defaultRequest:",
        "      cpu: 100m",
        "      memory: 256Mi",
        "    max:",
        "      cpu: 200m",
        "      memory: 512Mi",
        "    min:",
        "      cpu: 100m",
        "      memory: 256Mi",
        "---",
        "# LimitRange for PersistentVolumeClaim",
        "apiVersion: v1",
        "kind: LimitRange",
        "metadata:",
        "  name: ${1:LimitRangeName}",
        "  namespace: ${2:default}",
        "spec:",
        "  limits:",
        "  - type: PersistentVolumeClaim",
        "    default:",
        "      storage: 2Gi",
        "    defaultRequest:",
        "      storage: 2Gi",
        "    max:",
        "      storage: 2Gi",
        "    min:",
        "      storage: 2Gi"
        ]
    }
}
