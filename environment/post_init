# --------------------------
# initialize tools
# --------------------------

# # Python pyenv
export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init --path)"
eval "$(pyenv init -)"

# # Ruby rvm
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*

# # Javascript nvm
source /usr/share/nvm/init-nvm.sh

# replaced standard initialization with lazy-loader for performance issues
# source "${DOTFILES}/environment/lazy-load.sh/loader"

# HACK: fix yarn2 neomake issue loading proxy file in local binaries
PATH=$HOME/bin:$PATH                # Personal binaries
